generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          String   @id @default(uuid())
  name        String   @default("Untitled Project")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rootNodeId  String?
  nodes       Node[]   @relation("ProjectNodes")

  @@index([createdAt])
  @@index([updatedAt])
  @@map("projects")
}

model Node {
  id        String   @id @default(uuid())
  projectId String
  parentId  String?
  role      Role
  content   String
  positionX Float    @default(0)
  positionY Float    @default(0)
  metadata  Json?    @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parent    Node?    @relation("TreeStructure", fields: [parentId], references: [id], onDelete: Cascade)
  children  Node[]   @relation("TreeStructure")
  project   Project  @relation("ProjectNodes", fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([parentId])
  @@index([createdAt])
  @@map("nodes")
}

enum Role {
  SYSTEM
  USER
  ASSISTANT
}
