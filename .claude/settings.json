{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"hooks": {
		"Notification": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "notify-send 'Claude Code' 'Awaiting your input'"
					}
				]
			}
		],
		"Stop": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "$CLAUDE_PROJECT_DIR/.claude/scripts/check.sh"
					}
				]
			}
		]
	}
}
